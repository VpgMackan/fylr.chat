{
  "name": "fylr.chat",
  "version": "1.0.0",
  "description": "",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev:backend": "npm run start:dev -w backend",
    "dev:web": "npm run dev -w web",
    "build:backend": "npm run build -w backend",
    "build:web": "npm run build -w web",
    "build": "npm run build:backend && npm run build:web",
    "dev": "npm-run-all --parallel dev:backend dev:web",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check-all": "npm run lint && npm run format:check"
  },
  "devDependencies": {
    "@typescript-eslint/parser": "^8.35.1",
    "eslint": "^9.30.1",
    "eslint-config-next": "^15.3.5",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.5.1",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2",
    "typescript-eslint": "^8.35.1"
  },
  "author": "",
  "license": "ISC"
}
